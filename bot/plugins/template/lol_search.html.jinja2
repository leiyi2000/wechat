        //             "icon_id": 939,
        //             "level": 266,
        //             "tier": 255,
        //             "queue": 0
        //         }
        //     ]
        // };
        const data = {{ data }}
        // 获取表格主体
        const tableBody = document.getElementById('player-table-body');
        let i = 0
        // 遍历 players 数据并插入到表格中
        data.players.forEach(player => {
            const row = document.createElement('tr');
            const iconUrl = `https://wegame.gtimg.com/g.26-r.c2d3c/helper/lol/assis/images/resources/usericon/${player.icon_id}.png`;
            row.innerHTML = `
                <td>${++i}</td>
                <td>${player.name}</td>
                <td><img src="${iconUrl}" alt="icon"></td>
                <td>${player.area}</td>
                <td>${player.level}</td>
                <td>${player.tier}</td>
                <td>${player.openid}</td>
            `;
            tableBody.appendChild(row);
        });
    </script>
</body>
</html>
